/**
 * Computes the sum of two bits.
 */

CHIP HalfAdder {
    IN a, b;    // 1-bit inputs
    OUT sum,    // Right bit of a + b 
        carry;  // Left bit of a + b

    PARTS:
    // Put you code here:

   // Not(in=a ,out=nota );
   // And(a=nota ,b=b ,out=notab );

   // Not(in=b ,out=notb );
   // And(a=a ,b=notb ,out=notba );

   // Or(a=notab ,b=notba ,out=sum );

    // sum:
    Xor(a=a ,b=b ,out=sum );

    //carry
    And(a=a ,b=b ,out=carry );

}
